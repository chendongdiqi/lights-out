RewriteEngine On
RewriteRule ^login$ index.php?c=login
RewriteRule ^registro$ index.php?c=registro
RewriteRule ^inicio$ index.php?c=inicio
RewriteRule ^editar_perfil$ index.php?c=editar_perfil
RewriteRule ^ficha/(.*)/(.*)$ index.php?c=ficha&tipo=$1&id=$2 [NC,L]
RewriteRule ^perfil/(.*)/(.*)$ index.php?c=perfil&id=$1&tab=$2 [NC,L]
RewriteRule ^explorar$ index.php?c=explorar
RewriteRule ^administrador/(.*)$ index.php?c=administrador&tab=$1 [NC,L]
RewriteRule ^sobre_lightsout$ index.php?c=informacion&pagina=sobre_lightsout
RewriteRule ^politica_privacidad$ index.php?c=informacion&pagina=politica_privacidad
RewriteRule ^condiciones_uso$ index.php?c=informacion&pagina=condiciones_uso

ErrorDocument 403 /