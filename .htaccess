RewriteEngine On
RewriteRule ^login$ index.php?c=login
RewriteRule ^registro$ index.php?c=registro
RewriteRule ^inicio$ index.php?c=inicio
RewriteRule ^editar_perfil$ index.php?c=editar_perfil
RewriteRule ^ficha/(.*)/(.*)$ index.php?c=ficha&tipo=$1&id=$2 [NC,L]
RewriteRule ^perfil/(.*)$ index.php?c=perfil&id=$1 [NC,L]